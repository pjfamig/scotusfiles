<%= turbo_stream_from @opinion %>

<div id="feed">
	<%= render @opinion %>
</div>

<div id="sign-in">
  <% if user_signed_in? && current_user.admin? %> 
	  <p><%= link_to "Edit this opinion", edit_opinion_path(@opinion) %> | <%= link_to "Delete this opinion", @opinion, method: :delete  %></p>  
  <% end %> 
</div>


<div id="comments">
	<% if user_signed_in? %>
		<%= render "opinions/comments", opinion: @opinion %>
	<% else %>
		<%= link_to "Login", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to comment.
	<% end %>
</div>

<br>
<div>
	<a href="#">Back to Top</a>
</div>

