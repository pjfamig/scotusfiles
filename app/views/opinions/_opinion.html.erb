<% if opinion.syllabus.present? %>
	<div id="syllabus" class="syllabus"><%= opinion.syllabus.html_safe %></div>
<% end %>

<% if opinion.majority_opinion.present? %>
	<div id="majority" class="majority-opinion"><%= opinion.majority_opinion.html_safe %></div>
<% end %>

<% if opinion.dissent.present? %>
	<div id="dissent" class="dissent"><%= opinion.dissent.html_safe %></div>
<% end %>
	
<div id="pdf-viewer" style="margin-top: 10px; background-color: #444">
  <embed src="<%= opinion.scotus_filename %>" type="application/pdf" width="100%" height="1080px" />
</div>
		

</div> 

	<div class="two columns sticky">
			<h5>Comments</h5>
			<% if user_signed_in? %>
				<%= render "opinions/comments", opinion: @opinion %>
			<% else %>
			    <%= link_to "Login", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to comment.
			<% end %>
	</div>

</div>

</div>